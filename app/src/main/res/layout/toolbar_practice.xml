<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp">

    <LinearLayout
        android:id="@+id/practice_toolbars_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/practice_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_margin="4dp"
            android:indeterminate="false"
            android:max="5"
            android:progress="0"
            android:progressDrawable="@drawable/challenge_progress" />

        <ProgressBar
            android:id="@+id/practice_xp_countdown"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="4dp"
            android:indeterminate="false"
            android:progress="100"
            android:progressDrawable="@drawable/challenge_xp_progress" />


    </LinearLayout>

    <TextView
        android:id="@+id/practice_xp_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="6dp"
        android:text="XP LEFT: 5627"
        android:fontFamily="sans-serif"
        android:textColor="@color/colorGoldDark"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="@id/practice_toolbars_container"
        app:layout_constraintTop_toBottomOf="@id/practice_toolbars_container" />


</android.support.constraint.ConstraintLayout>