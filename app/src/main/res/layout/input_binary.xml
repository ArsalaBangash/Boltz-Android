<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="0.6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="0.4"
        android:gravity="center"
        android:weightSum="3">

        <Button
            style="@style/grid_button_style"
            android:onClick="onInputButtonPressed"
            android:tag="1"
            android:text="1"
            android:textSize="48dp" />


        <Button
            style="@style/grid_button_style"
            android:onClick="onInputButtonPressed"
            android:tag="0"
            android:text="0"
            android:textSize="48dp" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/buttonPoint"
            style="@style/backspace_button_style"
            android:backgroundTint="@color/colorSecondary"
            android:onClick="onBackspacePressed"
            android:src="@drawable/ic_backspace_large" />


    </LinearLayout>

    <Button
        android:id="@+id/checkButton"
        style="@style/check_button_style"
        android:layout_weight="0.2"
        android:onClick="check" />


</LinearLayout>